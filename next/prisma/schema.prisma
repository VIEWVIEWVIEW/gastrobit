generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// We define a model, where one or more RestaurantAdmins own a Restaurant
// We need to make sure, that at least one RestaurantAdmin is assigned to the Restaurant


enum ROLE {
  OWNER
  ADMIN
}

model RestaurantAdmin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      ROLE
  restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId Int?

  @@index([restaurantId])
}

model Restaurant {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  restaurantAdmins RestaurantAdmin[]
}